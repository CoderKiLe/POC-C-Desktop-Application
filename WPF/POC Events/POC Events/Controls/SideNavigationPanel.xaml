<UserControl x:Class="POC_Events.Controls.SideNavigationPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:POC_Events.Controls"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">
    
    <UserControl.Resources>
        <Style TargetType="Button">
            <Setter Property="Padding"
                    Value="20 10" />
            <Setter Property="Margin"
                    Value="10 5" />
        </Style>
    </UserControl.Resources>

    <Grid>
        <StackPanel>
            <Button x:Name="Page1"
                    Click="Page1_Click"
                    Content="Page 1" />
            <Button x:Name="Page2"
                    Click="Page2_Click"
                    Content="Page 2" />
            <Button x:Name="Page3"
                    Click="Page3_Click"
                    Content="Page 3" />
            <Button x:Name="Page4"
                    Click="Page4_Click"
                    Content="Page 4" />
        </StackPanel>
    </Grid>
</UserControl>
