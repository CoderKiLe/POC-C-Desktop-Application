<Window x:Class="POC_TreeViewNavigationPanle.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"

        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:POC_TreeViewNavigationPanle"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <!-- Navigation Panel -->
            <ColumnDefinition Width="*"/>
            <!-- Main Content -->
        </Grid.ColumnDefinitions>

        <!-- Side TreeView Panel -->
        <Border Grid.Column="0" Background="#f5f5f5">
            <TreeView Background="#f5f5f5" 
                      Foreground="White" 
                      FontSize="14"
                      BorderThickness="0"
                      Padding="10">
                <TreeViewItem Header="📁 Product" IsExpanded="True"/>
                <TreeViewItem Header="👥 Activity" IsExpanded="True">
                    <TreeViewItem Header="Jesper Aaberg"/>
                    <TreeViewItem Header="Dominik Paiha"/>
                </TreeViewItem>
                <TreeViewItem Header="📅 Work Schedule">
                    <TreeViewItem Header="Monday"/>
                    <TreeViewItem Header="Tuesday"/>
                    <TreeViewItem Header="Wednesday"/>
                </TreeViewItem>
                <TreeViewItem Header="⚙ Settings"/>
            </TreeView>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Column="1" Background="White">
            <TextBlock Text="Main Content Area" 
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Center" 
                       FontSize="24"/>
        </Grid>
    </Grid>
</Window>
